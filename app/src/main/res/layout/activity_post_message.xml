<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/LL_0"
    android:clickable="true"
    android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
    tools:context=".activity.PostMessageActivity">
    <RelativeLayout
        android:id="@+id/Rl_1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/dark_black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布动态"
            android:textSize="20dp"
            android:textColor="@color/dark_black"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="发表"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark_black"
            android:layout_centerVertical="true"
            android:background="@drawable/button_bg"
            />
    </RelativeLayout>



    <View
        android:layout_below="@+id/Rl_1"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#E0E0E0"/>

    <EditText
        android:id="@+id/etContent"
        android:layout_below="@+id/Rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="说点什么吧..."
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:lineHeight="30dp"
        android:textColor="#666666"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/Rll_1"
        android:layout_below="@+id/etContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/addphoto"

                />
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                />
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                />
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"/>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/im_add9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                />
        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
    <RelativeLayout
        android:id="@+id/addr_layout"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:"/>
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新地点"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
</RelativeLayout>